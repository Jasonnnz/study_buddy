<div class="page-title"><% if @error %>
    <p><%= @error %></p>
<% end %>

<%= form_tag "/handle_login" do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %><br><br>
    <%= label_tag :password %>
    <%= password_field_tag :password %><br><br>
    <%= submit_tag "Login!" %>
<% end %>
</div>