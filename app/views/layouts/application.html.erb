<!DOCTYPE html>
<html>
  <head>
    <title>StudyBuddy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%# javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <nav>
       <%= link_to image_tag("StudyBuddyLogo.png", size:"120x50"), '/', class:"image-logo" %>
        <ul>
            <div class="left-links">
              <li class="nav-tabs"><%= link_to "Students", students_path %></li>
              <li class="nav-tabs"><%= link_to "Schools", schools_path %></li>
              <li class="nav-tabs"><%= link_to "Courses", courses_path %></li>
            </div>
            <div class="right-links">
              <li class="nav-tabs right">Welcome:  <%= link_to @current_student.name, student_path(@current_student)%></li>
              <li class="nav-tabs right"><%= link_to "My School", school_path(@current_student.school) %></li>
              <li class="nav-tabs right"><%= button_to "LOG OUT", logout_path, method: :delete %></li>
            </div>
          </ul>
      </nav>
    <% else %>
      <nav> 
          <%= link_to image_tag("StudyBuddyLogo.png", size:"120x50"), '/', class:"image-logo" %>
        <ul>
          <div class="left-links">
            <li class="nav-tabs"><%= link_to "Schools", schools_path %></li>
            <li class="nav-tabs"><%= link_to "Courses", courses_path %></li>
          </div>  
          <div class="right-links">
            <li class="nav-tabs right"><%= link_to "Login", login_path %></li>
            <li class="nav-tabs right"><%= link_to "Sign Up", new_student_path %></li>
          </div>
        </ul>
      </nav>
    <% end %>
    <div class='container'>
      <%= yield %>
    </div>
  </body>
</html>


