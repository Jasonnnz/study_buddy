<h1>Schools</h1>

<% if flash[:error] %>
    <%= flash[:error]%>
<% end %>

<% if logged_in? %>
    <h4>Search for School:</h4>
    <%= form_tag(schools_path, method: :get) do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search" %>
    <% end %>
    <ul>    
        <% @schools.each do |school| %>
        <li><%= link_to school.name, school_path(school) %> - <%= school.location %></li>
        <% end %>
    </ul>
    <br>
    <%= button_to 'Create School', new_school_path, method: :get %>
<% else %>
    <h4>Search for School:</h4>
    <%= form_tag(schools_path, method: :get) do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search" %>
    <% end %>

    <ul>    
        <% @schools.each do |school| %>
        <li><%= link_to school.name, school_path(school) %> - <%= school.location %></li>
        <% end %>
    </ul>
<% end %>



