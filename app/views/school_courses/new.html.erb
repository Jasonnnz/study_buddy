<h1><%= @course.name %></h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<%= form_for @school_course do |f| %>
    <%= f.hidden_field :school_id, :value => @current_student.school.id %><br>
    <%= f.hidden_field :course_id, :value => session[:course_id] %><br>
    <%= f.label :teacher %>
    <%= f.text_field :teacher %><br>
    <%= f.submit "Add Course"%>
<% end %>
