<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<%= form_for @school_course do |f| %>
    <%= f.collection_select :school_id, @schools, :id, :name %><br>
    <%= f.collection_select :course_id, @courses, :id, :name %><br>
    <%= f.label :teacher %>
    <%= f.text_field :teacher %><br>
    <%= f.submit "Enroll"%>
<% end %>
