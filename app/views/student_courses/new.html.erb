<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<%= form_for @student_course do |f| %>
    <%= f.hidden_field :student_id, :value => @current_student.id %><br>
    <%= f.label :course_id %><br>
    <%= f.collection_select :course_id, @current_student.school.courses, :id, :name %><br>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
    <%= f.submit "Enroll"%>
<% end %>
