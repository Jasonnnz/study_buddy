<h1>Students</h1>

<% if flash[:error] %>
    <%= flash[:error]%>
<% end %>

<h4>Search for Student:</h4>
    <%= form_tag(students_path, method: :get) do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search" %>
    <% end %>

<ul>
<% @students.each do |student| %>
    <li><%= link_to student.name, student_path(student) %></li>
<% end %>
</ul>

